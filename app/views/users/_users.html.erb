<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <a href ="<%= user_path(user) %>">
          <img class="rounded-circle img-fluid mr-3" style="border-style:solid; border-color:lightblue; border-width:1px;"src= "<%= user.profile_picture.mini_thumb.url %>" alt="">
        </a>
        <div class="align-self-center">
          @<%= user.name %>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>